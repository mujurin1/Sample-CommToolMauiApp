<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="CommToolMauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:CommToolMauiApp.Views"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate view:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Counter"
        ContentTemplate="{DataTemplate view:CounterPage}"
        Route="CounterPage" />
    <ShellContent
        Title="Network Check"
        ContentTemplate="{DataTemplate view:NetworkCheckPage}"
        Route="NetworkCheckPage" />
    <ShellContent
        Title="Flex Layout"
        ContentTemplate="{DataTemplate view:FlexLayoutPage}"
        Route="FlexLayoutPage" />
</Shell>