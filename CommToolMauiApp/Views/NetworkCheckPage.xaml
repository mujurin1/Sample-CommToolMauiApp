<?xml version="1.0" encoding="utf-8"?>

<ContentPage
    x:Class="CommToolMauiApp.Views.NetworkCheckPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:CommToolMauiApp.ViewModels"
    Title="Network Check"
    x:DataType="viewmodel:NetworkCheckViewModel">

    <StackLayout Padding="40">
        <Button
            Command="{Binding CheckInternetCommand}"
            HorizontalOptions="Center"
            Text="Check Internet" />
        <Button
            Command="{Binding GoToAnotherCommand}"
            HorizontalOptions="Center"
            Text="Go to Another Page" />
    </StackLayout>
</ContentPage>