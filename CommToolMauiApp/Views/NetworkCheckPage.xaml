<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:CommToolMauiApp.ViewModels"
    x:Class="CommToolMauiApp.Views.NetworkCheckPage"             
    x:DataType="viewmodel:NetworkCheckViewModel"
    Title="Network Check">
    
    <StackLayout Padding="40">
        <Button 
            Text="Check Internet"
            Command="{Binding CheckInternetCommand}"
            HorizontalOptions="Center" />
        <Button
            Text="Go to Another Page"
            Command="{Binding GoToAnotherCommand}"
            HorizontalOptions="Center"/>
    </StackLayout>
</ContentPage>
